  read -r -e -p "tsf(osint/username input)> " input
  if [[ $input == "back" ]]; then
    main
  elif [[ $input == "exit" || $input == "quit" ]]; then
    terminator
  else
    bash $tsfDir/modules/osint/username $input 
    useusername
    
  fi
}

